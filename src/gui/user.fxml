<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UserController">

    <top>
        <FlowPane>
            <BorderPane.margin>
                <Insets bottom="25" top="25" left="25" right="25"/>
            </BorderPane.margin>

            <TextField
                    minWidth="200" maxWidth="200" fx:id="date"  disable="true" promptText="Current date"/>
        </FlowPane>
    </top>

    <center>
        <GridPane alignment="center" hgap="50" vgap="25">
            <columnConstraints>
                <ColumnConstraints percentWidth="40.0"/>
                <ColumnConstraints percentWidth="40.0" />
            </columnConstraints>

            <Label text="My info"  GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <TextField fx:id="name" disable="true" promptText="Name(s)"  GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="lastName" disable="true" promptText="Last name(s)"  GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Text text="Attendances:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="attendances" GridPane.rowIndex="5" GridPane.columnIndex="0" promptText="Attendances"/>
            <Text text="Number of absences" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <TextField fx:id="absences" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="Absences"/>



        </GridPane>
    </center>
    <bottom>
        <FlowPane alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="25" top="25" left="25" right="25"/>
            </BorderPane.margin>

            <Button onAction="#toHome" text="Home" BorderPane.alignment="CENTER" />

        </FlowPane>
    </bottom>
</BorderPane>

